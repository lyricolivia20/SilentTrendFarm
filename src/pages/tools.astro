			))}
		</nav>

		<!-- Categories -->
		{categories.map((category, index) => (
			<section id={category.id}>
				<div class="flex items-center gap-3 mb-3">
					<span class={`text-${category.color}-400 font-mono text-sm`}>{String(index + 1).padStart(2, '0')}</span>
					<div class={`flex-1 h-px bg-gradient-to-r from-${category.color}-500/50 to-transparent`}></div>
				</div>
