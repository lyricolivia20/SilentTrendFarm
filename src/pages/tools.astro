<Layout title="Recommended Tools ‚Äî Digital Polymath" description="Curated tools, platforms, and resources for developers, creators, and digital polymaths.">
	<div class="space-y-16">
		<!-- Hero -->
		<section class="py-8">
			<h1 class="text-4xl md:text-5xl font-bold text-zinc-100 mb-6 font-display leading-tight">
				Recommended <span class="bg-gradient-to-r from-emerald-400 via-cyan-400 to-violet-400 bg-clip-text text-transparent">Tools</span>
			</h1>
			<p class="text-lg text-zinc-400 leading-relaxed max-w-3xl mb-4">
				A curated collection of tools, platforms, and services I use or recommend for development, AI/ML, content creation, and more. These are the building blocks for digital polymaths.
			</p>
			<p class="text-sm text-zinc-500">
				<span class="text-amber-400">*</span> Some links are affiliate links. Using them supports this site at no extra cost to you.
			</p>
		</section>

		<!-- Quick Nav -->
		<nav class="flex flex-wrap gap-2">
			{categories.map((cat) => (
				<a href={`#${cat.id}`} class={`text-xs px-3 py-1.5 rounded-full border border-zinc-800 bg-zinc-900/50 text-zinc-400 hover:border-${cat.color}-500/30 hover:text-${cat.color}-400 transition-all font-mono`}>
					{cat.icon} {cat.title}
				</a>
			))}
		</nav>

		<!-- Categories -->
		{categories.map((category, index) => (
			<section id={category.id}>
				<div class="flex items-center gap-3 mb-3">
					<span class={`text-${category.color}-400 font-mono text-sm`}>{String(index + 1).padStart(2, '0')}</span>
					<div class={`flex-1 h-px bg-gradient-to-r from-${category.color}-500/50 to-transparent`}></div>
				</div>
				<div class="mb-6">
					<h2 class="text-2xl font-bold text-zinc-100 font-display mb-2 flex items-center gap-3">
						<span class="text-2xl">{category.icon}</span>
						{category.title}
					</h2>
					<p class="text-zinc-500 text-sm">{category.description}</p>
				</div>
				
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-3">
					{category.tools.map((tool) => (
						<a href={tool.url} target="_blank" rel="noopener sponsored" class={`group block p-4 rounded-xl border transition-all ${
							tool.highlight 
								? `border-${category.color}-500/30 bg-${category.color}-500/5 hover:border-${category.color}-500/50` 
								: 'border-zinc-800/50 bg-zinc-900/30 hover:border-zinc-700'
						}`}>
							<div class="flex items-start justify-between gap-2 mb-2">
								<h3 class={`font-semibold text-zinc-100 group-hover:text-${category.color}-400 transition-colors`}>{tool.name}</h3>
								{tool.highlight && (
									<span class={`text-[9px] px-1.5 py-0.5 rounded bg-${category.color}-500/20 text-${category.color}-400 font-mono uppercase`}>Top Pick</span>
								)}
							</div>
							<p class="text-zinc-500 text-sm mb-3 leading-relaxed">{tool.description}</p>
							<div class="flex items-center justify-between">
								<span class="text-xs font-mono text-zinc-600">{tool.commission}</span>
								<svg class="w-4 h-4 text-zinc-700 group-hover:text-zinc-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
								</svg>
							</div>
						</a>
					))}
				</div>
			</section>
		))}

		<!-- Disclaimer -->
		<section class="border-t border-zinc-800/50 pt-12">
			<div class="max-w-2xl p-6 rounded-xl border border-zinc-800/50 bg-zinc-900/30">
				<h3 class="font-semibold text-zinc-100 mb-3 flex items-center gap-2">
